<% include ./partials/adminhead %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Invoice</h1>
      <% include ./partials/messages %>
      <form action="/admin/newinvoice" method="POST">
        <div class="form-group">
          <label for="iid">Enter Invoice ID:</label>
          <input
            type="text"
            id="iid"
            name="iid"
            class="form-control"
            placeholder="Enter Invoice ID"
            value="<%= typeof iid != 'undefined' ? iid : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof email != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof email != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Add Invoice</button>
      </form>
    </div>
  </div>
</div>
